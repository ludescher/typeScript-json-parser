{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ES6",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "declarationMap": true,
        "module": "ES6",
        "moduleResolution": "classic",
        "removeComments": true,
        "sourceMap": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}